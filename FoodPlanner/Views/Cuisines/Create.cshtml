@model FoodPlanner.Models.Cuisine

@{
    ViewData["Title"] = "Create Cuisine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container flistPage">
    <p style="text-align:right;">
        <a class="btn dark btn-coffee" asp-controller="Recipes" asp-action="Create" style="width: 100px;">Back</a>
    </p>
    <hr />
    <h1>Create</h1>

    <h4>Cuisine</h4>
    <hr />
    @if (ViewData.Keys.Contains("errorMessage"))
    {
        <p class="text-danger">
            @ViewData["errorMessage"]
        </p>
    }
    <div class="row">
        <div class="col-12">
            <form asp-action="Create">
                @if (ViewData.Keys.Contains("returnUrl"))
                {
                    <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
                }
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="nav-link navbar-link btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

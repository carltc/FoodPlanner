@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
</div>

<hr />

<div class="row">
    <div class="col-4" style="padding: 15px;">
        <a class="btn btn-primary" asp-area="" asp-controller="FoodPlans" asp-action="Index" style="width: 100%; height: 100%;">
            <h3>Food Plan</h3>
        </a>
    </div>
    <div class="col-4" style="padding: 15px;">
        <a class="btn btn-primary" asp-area="" asp-controller="ShoppingLists" asp-action="Details" asp-route-Days="7" style="width: 100%; height: 100%;">
            <h3>Shopping List</h3>
        </a>
    </div>
    <div class="col-4" style="padding: 15px;">
        <a class="btn btn-primary" asp-area="" asp-controller="Recipes" asp-action="Create" style="width: 100%; height: 100%;">
            <h3>New Recipe</h3>
        </a>
    </div>
</div>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
</div>

<hr />

<div class="row">
    <div class="col">
        <a class="btn btn-primary" asp-area="" asp-controller="FoodPlans" asp-action="Create" style="width: 100%; height: 100%;">
            <h1>New Food Plan</h1>
        </a>
    </div>
    @if (ViewBag.CurrentFoodPlanId > 0)
    {
        <div class="col">
            <a class="btn btn-primary" asp-area="" asp-controller="FoodPlans" asp-action="Details" asp-route-id="@ViewBag.CurrentFoodPlanId" style="width: 100%; height: 100%;">
                <h1>Current Food Plan</h1>
                <h4>@ViewBag.CurrentFoodPlanStart</h4>
            </a>
        </div>
    }
    @if (ViewBag.UpcomingFoodPlanId > 0)
    {
        <div class="col">
            <a class="btn btn-primary" asp-area="" asp-controller="ShoppingLists" asp-action="Details" asp-route-id="@ViewBag.UpcomingFoodPlanId" style="width: 100%; height: 100%;">
                <h1>Shopping List</h1>
                <h4>@ViewBag.UpcomingFoodPlanStart</h4>
            </a>
        </div>
    }
    <div class="col">
        <a class="btn btn-primary" asp-area="" asp-controller="Recipes" asp-action="Create" style="width: 100%; height: 100%;">
            <h1>New Recipe</h1>
        </a>
    </div>
</div>

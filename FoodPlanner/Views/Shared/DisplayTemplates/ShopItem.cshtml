@using FoodPlanner.Classes

@model ShopItem

<div class="@if (Model.Bought) { <text>shopItemBought</text> } shopItemCard card mb-3" style="width: 100%" onclick="ToggleShopItem(@Model.ProductId)" id="ShopItem-@Model.ProductId">
    <div class="row no-gutters">
        <div class="col-8 shopItemRow" style="background-color: lightgray;">
            <b>@Model.Product.Name @Model.Product.ProductType.Name</b>
        </div>
        <div class="col-4 shopItemRow" style="text-align: right;">
            @Model.Quantity @Model.Unit
        </div>
    </div>
</div>
@model IEnumerable<FoodPlanner.Models.FoodPlan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Food Plan</h1>

@*<div class="card-deck" style="overflow-x: scroll; width: 100%;">*@
<div class="container-fluid">
    <div class="row flex-row flex-nowrap overflow-auto">
        @foreach (var foodplan in Model)
        {
            <div class="col-3">
                @Html.DisplayFor(fp => foodplan)
            </div>
        }
    </div>
</div>




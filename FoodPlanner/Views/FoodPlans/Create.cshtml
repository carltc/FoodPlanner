@model FoodPlanner.Models.FoodPlan

@{
    ViewData["Title"] = "Add to Calendar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>FoodPlan</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly="readonly" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" readonly="readonly" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-4">
                    Recipes:

                    <div class="form-group" id="RecipeList">
                        <div class="row" name="RecipeRow">
                            <div class="col">
                                <select name="RecipeIds" class="form-control" asp-items="ViewBag.RecipeId"></select>
                            </div>
                            <div class="col">
                                <select name="RecipeMeals"
                                        class="form-control"
                                        asp-items="Html.GetEnumSelectList<FoodPlanner.Classes.Meal>()">
                                </select>
                            </div>
                        </div>
                    </div>

                    <button type="button" onclick="addRecipe()">Add Recipe</button>
                </div>
                <div class="col-1"></div>
                <div class="col">
                    Products:

                    <div class="form-group" id="ProductList">
                        <div class="row" name="ProductRow">
                            <div class="col-6">
                                <select name="ProductIds" class="form-control" asp-items="ViewBag.ProductId"></select>
                            </div>
                            <div class="col-2">
                                <input name="Quantities" type="number" step="0.01" min="0" value="0" style="width: inherit;" />
                            </div>
                            <div class="col">
                                <select name="Units"
                                        class="form-control"
                                        asp-items="Html.GetEnumSelectList<FoodPlanner.Classes.Unit>()">
                                </select>
                            </div>
                            <div class="col">
                                <select name="ProductMeals"
                                        class="form-control"
                                        asp-items="Html.GetEnumSelectList<FoodPlanner.Classes.Meal>()">
                                </select>
                            </div>
                        </div>
                    </div>

                    <button type="button" onclick="addProduct()">Add Product</button>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

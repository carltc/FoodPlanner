@model FoodPlanner.Models.FoodPlan

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly="readonly" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" readonly="readonly" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Meal: </label>
            <input class="form-control" readonly="readonly" value="@ViewBag.MealType" />
        </div>

        <div class="row">
            <div class="col-12">
                Recipes:

                @foreach (Recipe recipe in ViewBag.Recipes)
                {
                    <div class="row">
                        <div class="col-10">
                            @Html.DisplayFor(r => recipe)
                        </div>
                        <div class="col-2">
                            <form asp-action="Add">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Name" />
                                <input type="hidden" asp-for="Date" />
                                <input type="hidden" name="RecipeIds" value="@recipe.Id" />
                                <input type="hidden" name="RecipeMeals" value="@ViewBag.MealType" />

                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                }

            </div>

        </div>

        <hr />
    </div>
</div>

<div>
    <a asp-action="Index">Back to Food Plan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


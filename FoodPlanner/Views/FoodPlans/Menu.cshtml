@model FoodPlanner.Models.FoodPlan

@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    
<div class="row">
    <div class="col-md">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" readonly="readonly" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label"></label>
            <input asp-for="Date" class="form-control" readonly="readonly" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Meal: </label>
            <input class="form-control" readonly="readonly" value="@ViewBag.MealType" />
        </div>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="recipes-tab" data-toggle="tab" href="#recipes" role="tab" aria-controls="recipes" aria-selected="true">Recipes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="products-tab" data-toggle="tab" href="#products" role="tab" aria-controls="products" aria-selected="false">Products</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="recipes" role="tabpanel" aria-labelledby="home-tab">
                <div class="row">
                    <div class="col-12">
                        <div style="padding-top:10px;">
                            <input type="text" id="recipeSearch" onkeyup="listSearch('recipeSearch','recipeList','recipeRow','b')" placeholder="Search for recipes.." style="width: 100%;">
                        </div>
                        <hr />
                        <div class="container-fluid" id="recipeList">
                            @foreach (Recipe recipe in ViewBag.Recipes)
                            {
                                <div class="row recipeRow">
                                    <div class="col-10">
                                        @Html.DisplayFor(r => recipe)
                                    </div>
                                    <div class="col-2">
                                        <form asp-action="Add">
                                            <input type="hidden" asp-for="Id" />
                                            <input type="hidden" asp-for="Name" />
                                            <input type="hidden" asp-for="Date" />
                                            <input type="hidden" name="RecipeIds" value="@recipe.Id" />
                                            <input type="hidden" name="RecipeMeals" value="@ViewBag.MealType" />

                                            <div class="form-group">
                                                <input type="submit" value="Add" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>

                </div>
            </div>

            <div class="tab-pane fade" id="products" role="tabpanel" aria-labelledby="products-tab">
                <div class="row">
                    <div class="col-12">
                        <div style="padding-top:10px;">
                            <input type="text" id="productSearch" onkeyup="listSearch('productSearch','productList','productRow','b')" placeholder="Search for products.." style="width: 100%;">
                        </div>
                        <hr />
                        <div class="container-fluid" id="productList">
                            @foreach (Product product in ViewBag.Products)
                            {
                                <div class="row productRow">
                                    <div class="col-10">
                                        @Html.DisplayFor(r => product)
                                    </div>
                                    <div class="col-2">
                                        <form asp-action="Add">
                                            <input type="hidden" asp-for="Id" />
                                            <input type="hidden" asp-for="Name" />
                                            <input type="hidden" asp-for="Date" />
                                            <input type="hidden" name="ProdyuctIds" value="@product.Id" />
                                            <input type="hidden" name="ProductMeals" value="@ViewBag.MealType" />

                                            <div class="form-group">
                                                <input type="submit" value="Add" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <hr />
    </div>
</div>

<div>
    <a asp-action="Index">Back to Food Plan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


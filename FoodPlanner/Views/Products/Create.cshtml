@model FoodPlanner.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create new Product</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row">
                <label for="Name" class="col-sm-2 control-label">Variety</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <label for="ProductType_Name" class="col-sm-2 col-form-label">Product</label>
                <div class="col-sm-10">
                    <input id="ProductType_Name" name="ProductType" class="form-control ui-autocomplete-input" type="text" />
                </div>
            </div>

            <div class="form-group row">
                <label for="Category_Name" class="col-sm-2 col-form-label">Category</label>
                <div class="col-sm-10">
                    <input id="Category_Name" name="Category" class="form-control ui-autocomplete-input" type="text" />
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#ProductType_Name').autocomplete({
                source: '/Products/GetProductTypes'
            });
            $('#Category_Name').autocomplete({
                source: '/Products/GetCategories'
            });
        });
    </script>
}
